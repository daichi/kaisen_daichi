- @products.each do |product|
  %div.product
    = image_tag(product.image_url, :class => "photo")
    %p.name
      = product.name
    %p.description
      = simple_format(product.description)
    %div.proce_line
      %span.price
        = product.price
        円
    
    = button_to "買物カゴに入れる", :action => 'add_to_cart', :id => product

= will_paginate @products
